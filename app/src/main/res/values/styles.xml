<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/RelayrTitleActionBar</item>
        <item name="actionBarStyle">@style/RelayrTitleActionBar</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RelayrTitleActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/actionbar_text_size</item>
        <item name="android:background">@color/navigation_background</item>
        <item name="background">@color/navigation_background</item>
    </style>

    <style name="WunderBarProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_width">@dimen/progress_bar_height</item>
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">1.4</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_accelerate</item>
        <item name="spb_mirror_mode">false</item>
        <item name="spb_reversed">false</item>
        <item name="spb_progressiveStart_activated">true</item>
    </style>

    <dimen name="progress_bar_height">10dp</dimen>
</resources>
