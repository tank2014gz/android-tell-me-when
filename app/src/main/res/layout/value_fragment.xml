<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/vf_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:orientation="horizontal"
        android:background="@color/navigation_background"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/vf_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/navigation_title_padding"
            android:gravity="center" />

        <io.relayr.commons.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vf_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/navigation_text_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/navigation_title_padding"
            android:textAllCaps="true"
            style="@style/BoldText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vf_rule_info"
        android:layout_below="@+id/vf_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_object_height"
        android:padding="@dimen/default_object_padding">

        <ImageView
            android:id="@+id/vf_object_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_next_item" />

        <io.relayr.commons.widget.CustomTextView
            android:id="@+id/vf_object_name"
            android:layout_toRightOf="@+id/vf_object_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ma_tab_rules_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_object_title_text_size"
            android:textAllCaps="true"
            style="@style/BoldText" />

        <io.relayr.commons.widget.CustomTextView
            android:id="@+id/vf_object_info"
            android:layout_toRightOf="@+id/vf_object_icon"
            android:layout_below="@id/vf_object_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ma_tab_notifications_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_object_subtitle_text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/vf_info_divider"
        android:layout_below="@id/vf_rule_info"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider" />

    <LinearLayout
        android:id="@+id/vf_rule_operator"
        android:layout_below="@id/vf_info_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_object_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vf_operator_equals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/vf_equals_operator"
            android:textSize="@dimen/vf_operator_size"
            android:gravity="center" />

        <TextView
            android:id="@+id/vf_operator_less"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/vf_less_operator"
            android:textSize="@dimen/vf_operator_size"
            android:gravity="center" />

        <TextView
            android:id="@+id/vf_operator_greater"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/vf_greater_operator"
            android:textSize="@dimen/vf_operator_size"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:id="@+id/vf_operator_divider"
        android:layout_below="@id/vf_rule_operator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider" />

    <RelativeLayout
        android:id="@+id/vf_rule_value"
        android:layout_below="@id/vf_operator_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_object_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vf_rule_value_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/vf_equals_operator"
            android:textSize="@dimen/vf_operator_size"
            android:gravity="center" />

        <SeekBar
            android:id="@+id/vf_rule_value_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_object_padding"
            android:paddingRight="@dimen/default_object_padding"
            android:layout_centerInParent="true"
            android:max="100" />

    </RelativeLayout>

    <View
        android:id="@+id/vf_value_divider"
        android:layout_below="@id/vf_rule_value"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider" />

    <Button
        android:id="@+id/vf_button_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_green"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/button_done_padding"
        android:text="@string/vf_button_done"
        android:padding="@dimen/button_done_padding"
        android:textSize="@dimen/button_done_text_size"
        style="@style/BoldText"/>
</RelativeLayout>
