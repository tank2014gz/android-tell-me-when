<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include layout="@layout/view_navigation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/navigation_height"
        android:layout_marginBottom="@dimen/default_object_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_object_height"
                android:padding="@dimen/default_object_padding"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <io.relayr.commons.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ref_get_notifications"
                    android:textColor="@android:color/white"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/default_object_subtitle_text_size"
                    style="@style/BoldText" />

                <Switch
                    android:id="@+id/ref_notification_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <include layout="@layout/view_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_object_height"
                android:padding="@dimen/default_object_padding"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <io.relayr.commons.widget.CustomTextView
                    android:id="@+id/ref_rule_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ma_tab_rules"
                    android:textColor="@android:color/white"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/default_object_title_text_size"
                    android:textAllCaps="true"
                    style="@style/BoldText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_edit_text_inv"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <include layout="@layout/view_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_object_height"
                android:padding="@dimen/default_object_padding"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <io.relayr.commons.widget.CustomTextView
                    android:id="@+id/ref_transmitter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/ma_tab_rules"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_object_title_text_size"
                    android:textAllCaps="true"
                    style="@style/BoldText" />

                <io.relayr.commons.widget.CustomTextView
                    android:id="@+id/ref_transmitter_name"
                    android:layout_below="@id/ref_transmitter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/ma_tab_notification"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_object_subtitle_text_size"
                    style="@style/NormalText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_edit_text_inv"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <include layout="@layout/view_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_object_height"
                android:padding="@dimen/default_object_padding"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ref_sensor_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_next_item" />

                <io.relayr.commons.widget.CustomTextView
                    android:id="@+id/ref_sensor_name"
                    android:layout_toRightOf="@+id/ref_sensor_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ma_tab_rules"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_object_title_text_size"
                    android:textAllCaps="true"
                    style="@style/BoldText" />

                <io.relayr.commons.widget.CustomTextView
                    android:id="@+id/ref_sensor_info"
                    android:layout_toRightOf="@+id/ref_sensor_icon"
                    android:layout_below="@id/ref_sensor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ma_tab_notification"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_object_subtitle_text_size"
                    style="@style/NormalText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_edit_text_inv"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <include layout="@layout/view_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_object_height"
                android:padding="@dimen/default_object_padding"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <io.relayr.commons.widget.CustomTextView
                    android:id="@+id/ref_rule_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/ma_tab_rules"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/vf_operator_size"
                    android:textAllCaps="true"
                    style="@style/NormalText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_edit_text_inv"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <include layout="@layout/view_divider" />

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/view_button_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_done_padding"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
