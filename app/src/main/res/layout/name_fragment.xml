<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/nf_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:orientation="horizontal"
        android:background="@color/navigation_background"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/nf_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/navigation_title_padding"
            android:gravity="center" />

        <io.relayr.commons.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vf_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/navigation_text_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/navigation_title_padding"
            android:textAllCaps="true"
            style="@style/BoldText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/divider" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nf_rule_name_et"
        android:layout_below="@+id/nf_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/nf_edit_text_padding"
        android:hint="@string/nf_rule_hint"
        android:textSize="@dimen/default_object_title_text_size"
        android:textColor="@color/background"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/nf_edit_text_padding"
        android:drawableRight="@drawable/icon_edit_text"
        android:textStyle="bold"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:maxLength="20"/>

    <View
        android:id="@+id/nf_name_divider"
        android:layout_below="@id/nf_rule_name_et"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider" />

    <Button
        android:id="@+id/nf_button_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_green"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/button_done_padding"
        android:text="@string/vf_button_done"
        android:padding="@dimen/button_done_padding"
        android:textSize="@dimen/button_done_text_size"
        style="@style/BoldText"/>
</RelativeLayout>
